<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/phone_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/ellipse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ellipse_1" />

        <TextView
            android:id="@+id/cartify_"
            android:layout_width="248.92dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="82.97dp"
            android:layout_marginTop="75.57dp"
            android:fontFamily="@font/rum_raisin"
            android:gravity="center_horizontal|top"
            android:text="@string/cartify_"
            android:textAppearance="@style/cartify_" />

        <ImageView
            android:id="@+id/caritfy_logo"
            android:layout_width="182.35dp"
            android:layout_height="139.33dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="-24dp"
            app:srcCompat="@drawable/cartify_logo" />

        <TextView
            android:id="@+id/dont_have_an_account_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/register_btn"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="114dp"
            android:layout_marginLeft="114dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:text="Already have an account?"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/login_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dont_have_an_account_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="203dp"
            android:layout_marginLeft="203dp"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:text="LOGIN"
            android:textColor="#E18417"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_below="@+id/ellipse"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:hint="Name"
            android:inputType="textPersonName"
            android:textColor="#FF9800"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_below="@+id/name_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="#FF9800"
            android:textColorLink="#FFFFFF"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/birthdate_txt"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_below="@+id/password_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:hint="Birthdate"
            android:inputType="none"
            android:textColor="#FF9800"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/job_txt"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_below="@+id/birthdate_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:hint="Job"
            android:inputType="textPersonName"
            android:textColor="#FF9800"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/email_txt"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_below="@+id/username_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FF9800"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/password_txt"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_below="@+id/email_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="49dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:ems="10"
            android:fontFamily="@font/gtwalsheimpro_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FF9800"
            android:textSize="24sp" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="185dp"
            android:layout_height="58dp"
            android:layout_below="@+id/job_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="136dp"
            android:layout_marginTop="15dp"
            android:background="#E18417"
            android:fontFamily="@font/gtwalsheimpro_black"
            android:text="REGISTER"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/gender_radio_group"
            android:layout_width="200dp"
            android:layout_height="43dp"
            android:layout_below="@+id/birthdate_txt"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/male_radio_btn"
                android:layout_width="94dp"
                android:layout_height="wrap_content"
                android:text="Male"
                android:textSize="22sp" />

            <RadioButton
                android:id="@+id/female_radio_btn"
                android:layout_width="118dp"
                android:layout_height="wrap_content"
                android:text="Female"
                android:textSize="22sp" />
        </RadioGroup>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

