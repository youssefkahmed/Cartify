<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/homepage_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Container for Fragments-->
    <FrameLayout
        android:id="@+id/homepage_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

    </FrameLayout>


    <!--Bottom Nav Bar-->
    <View
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignTop="@+id/homepage_frame"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="680dp"
        android:background="@drawable/nav_bar"
        />


    <!--        Buttons     -->

    <!--Home Button-->
    <Button
        android:id="@+id/home_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="705dp"
        android:background="@drawable/icon_home"
        />

    <!--Cart Button-->
    <Button
        android:id="@+id/cart_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="146dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="705dp"
        android:background="@drawable/icon_cart"
        />

    <!--Wishlist Button-->
    <Button
        android:id="@+id/wishlist_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="232dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="705dp"
        android:background="@drawable/icon_heart"
        />

    <!--Profile Button-->
    <Button
        android:id="@+id/profile_btn"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="318dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="705dp"
        android:background="@drawable/icon_user"
        />

</RelativeLayout>