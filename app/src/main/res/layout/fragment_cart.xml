<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cartFrag_background"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/no_cart_items_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="There are no items in your cart."
        android:textSize="26sp"
        android:visibility="invisible"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_cart_items"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        >
    </androidx.recyclerview.widget.RecyclerView>

    <!-- Confirm Button -->
    <Button
        android:id="@+id/checkout_btn"
        android:layout_width="185dp"
        android:layout_height="58dp"
        android:layout_below="@+id/rv_cart_items"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="25dp"
        android:background="#E18417"
        android:fontFamily="@font/gtwalsheimpro_black"
        android:shadowColor="#00121212"
        android:shadowRadius="0"
        android:text="CHECKOUT"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        />

    <!-- Clear Cart Button -->
    <Button
        android:id="@+id/clear_cart_btn"
        android:layout_width="185dp"
        android:layout_height="58dp"
        android:layout_below="@+id/rv_cart_items"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/checkout_btn"
        android:layout_toRightOf="@+id/checkout_btn"
        android:background="#E11616"
        android:fontFamily="@font/gtwalsheimpro_black"
        android:shadowColor="#00121212"
        android:shadowRadius="0"
        android:text="CLEAR CART"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />
</RelativeLayout>