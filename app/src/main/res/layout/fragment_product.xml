<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/productFrag_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/background">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        android:layout_width="@dimen/product_image_width"
        android:layout_height="@dimen/product_image_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <!--//////////////////////////////////////////////////////////////-->

    <!-- Product Name Label -->
    <TextView
        android:id="@+id/product_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_image"
        android:layout_marginTop="30dp"
        android:text="Name: "
        android:textSize="30sp"
        android:textColor="#e18417"
        android:fontFamily="@font/gtwalsheimpro_black"
        />

    <!-- Product Name -->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_name_label"
        android:layout_toEndOf="@+id/product_name_label"
        android:layout_alignTop="@+id/product_name_label"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:text="loading..."
        android:textSize="24sp"
        android:fontFamily="@font/gtwalsheimpro_regular"
        />


    <!--//////////////////////////////////////////////////////////////-->


    <!-- Product Price Label -->
    <TextView
        android:id="@+id/product_price_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_name_label"
        android:layout_marginTop="30dp"
        android:text="Price: "
        android:textSize="30sp"
        android:textColor="#e18417"
        android:fontFamily="@font/gtwalsheimpro_black"
        />

    <!-- Product Price -->
    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_price_label"
        android:layout_toEndOf="@+id/product_price_label"
        android:layout_alignTop="@+id/product_price_label"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:text="loading..."
        android:textSize="24sp"
        android:fontFamily="@font/gtwalsheimpro_regular"
        />


    <!-- VAT Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_price"
        android:layout_toEndOf="@+id/product_price"
        android:layout_alignTop="@+id/product_price"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:text="(ALL PRICES INCLUDE VAT)"
        android:textSize="12sp"
        />

    <!--//////////////////////////////////////////////////////////////-->



    <!-- Product Seller Label -->
    <TextView
        android:id="@+id/product_seller_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_label"
        android:layout_marginTop="30dp"
        android:text="Seller: "
        android:textSize="30sp"
        android:textColor="#e18417"
        android:fontFamily="@font/gtwalsheimpro_black"
        />

    <!-- Product Seller -->
    <TextView
        android:id="@+id/product_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_seller_label"
        android:layout_toEndOf="@+id/product_seller_label"
        android:layout_alignTop="@+id/product_seller_label"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="loading..."
        android:textSize="24sp"
        android:fontFamily="@font/gtwalsheimpro_regular"
        />


    <!--//////////////////////////////////////////////////////////////-->

    <!-- Product Category Label -->
    <TextView
        android:id="@+id/product_category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_seller_label"
        android:layout_marginTop="30dp"
        android:text="Category: "
        android:textSize="30sp"
        android:textColor="#e18417"
        android:fontFamily="@font/gtwalsheimpro_black"
        />

    <!-- Product Category -->
    <TextView
        android:id="@+id/product_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/product_category_label"
        android:layout_toEndOf="@+id/product_category_label"
        android:layout_alignTop="@+id/product_category_label"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:text="loading..."
        android:textSize="24sp"
        android:fontFamily="@font/gtwalsheimpro_regular"
        />


    <!--//////////////////////////////////////////////////////////////-->

    <!-- Product Quantity Label -->
    <TextView
        android:id="@+id/product_quantity_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_category_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="loading..."
        android:textColor="#F12D2D"
        android:textSize="16sp"
        android:fontFamily="@font/gtwalsheimpro_black"
        />


    <!--//////////////////////////////////////////////////////////////-->

    <!-- Add To Cart Button -->
    <Button
        android:id="@+id/add_to_cart_btn"
        android:layout_width="185dp"
        android:layout_height="58dp"
        android:layout_below="@+id/product_quantity_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/gtwalsheimpro_black"
        android:text="ADD TO CART"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />

    <!-- Add To Wishlist Button -->
    <Button
        android:id="@+id/add_to_wishlist_btn"
        android:layout_width="185dp"
        android:layout_height="58dp"
        android:layout_below="@+id/add_to_cart_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/transparent_button_red"
        android:fontFamily="@font/gtwalsheimpro_black"
        android:shadowColor="#00121212"
        android:shadowRadius="0"
        android:text="WISHLIST"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        />

</RelativeLayout>